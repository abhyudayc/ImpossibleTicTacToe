<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launcher_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherActivity"
    android:background="@drawable/background_launcher"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/launcher_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/speaker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speaker_on"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:paddingTop="48dp"
        android:paddingBottom="48dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:gravity="center">

        <Button
            android:id="@+id/launcher_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/play_btn_selector"/>

    </RelativeLayout>

</LinearLayout>