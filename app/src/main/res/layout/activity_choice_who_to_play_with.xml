<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherActivity"
    android:background="@drawable/background_launcher"
    android:orientation="vertical"
    android:id="@+id/choiceWhoToPlayWithLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:weightSum="8">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:src="@drawable/coins_left" />

        <TextView
            android:id="@+id/tvCoinsLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="right|end">

            <ImageView
                android:id="@+id/speaker_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/speaker_on" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:paddingBottom="60dp"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:gravity="center|bottom"
        android:text="Play against"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" />

    <Button
        android:id="@+id/buttonComputer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/against_computer_button_selector"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp">

        <Button
            android:id="@+id/buttonHuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ddffffff"
            android:textSize="20sp"
            android:padding="15dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="#22000000"
            android:text="Your buddy"/>

    </LinearLayout>

</LinearLayout>